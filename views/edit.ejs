<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <link rel="stylesheet" href="../views/style.css">
      <link rel="stylesheet" href="../views/media.css">
      <script src="../views/script.js"></script>
      <title>NodeJS project</title>
   </head>
   <body>
      <section class="header">
         <div class="container">
            <div class="head">
               <div class="logo">
                  <img src="../views/images/logo.jpg">
                  <span>DISPLAY</span>
               </div>
               <div class="icons">
                  <ul>
                     <li><a href="https://instagram.com" class="instagram"></a></li>
                     <li><a href="https://plus.google.com/" class="google"></a></li>
                     <li><a href="https://ru.pinterest.com/" class="pinterest"></a></li>
                     <li><a href="" class="icon3"></a></li>
                     <li><a href="https://facebook.com" class="facebook"></a></li>
                     <li><a href="https://twitter.com" class="twitter" ></a></li>
                  </ul>
               </div>
            </div>
            <div class="menu">
               <nav>
                  <ul>
                     <li><a href="/home" >Home</a></li>
                     <li><a href="/contact" >Contact</a></li>
                  </ul>
               </nav>
            </div>
         </div>
      </section>
      <section class="login">
         <div class="container">
            <div class="wrapper_login">
               <div class="login_text" id="text_need">
                  <span>EDIT PROJECT INFO</span>
               </div>
            </div>
         </div>
      </section>
      <section class="portfolio">
         <div class="container">
            <div class="paths">
               <span class="all_p">ALL  </span>/<span class="print">  PRINT  </span>/<span class="photo">  PHOTOGRAPHY  </span>/<span class="web">  WEB  </span>/<span class="applications">  APPLICATIONS  </span>
            </div>
            <div class="view_head">
               <div class="view_image" id="image_edit">
                  <img src="../views/<%= src %>">
               </div>
               <div class="content_edit" >
                  <input type="text" name="title" value="<%= title %>" placeholder="Project title">
                  <input type="text" name="author" value="<%= author %>" placeholder="Project author">
                  <input type="text" name="Category" value="<%= category %>" placeholder="Category">
               </div>
            </div>
            <div class="view_description descr_edit">
               <%if (description.indexOf('|')>0) { %>
               <input type="text" name="Description" value="<%= description.split('|')[1] %>" placeholder="Description">
               <% } %>
               <%if (description.indexOf('|')<0) { %>
               <input type="text" name="Description" value="<%= description %>" placeholder="Description">
               <% } %>
            </div>
            <button id="button_edit" onclick="changeItem(<%= id %>)">DONE</button>
         </div>
      </section>
      <section class="footer">
         <div class="container">
            <div class="wrapper_footer">
               <div class="footer_text">
                  <span>COPYRIGHT 2013 DISPLAY. ALL RIGHTS RESERVED.</span>
               </div>
               <div class="footer_paths">
                  <span class="footer_home" onclick="window.location.href = '/home';">home  </span>/<span class="footer_contact" onclick="contact()">  contact</span>
               </div>
            </div>
         </div>
      </section>
   </body>
</html>