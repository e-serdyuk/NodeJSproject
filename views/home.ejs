<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <link rel="stylesheet" href="./views/style.css">
      <link rel="stylesheet" href="./views/media.css">
      <script src="./views/script.js"></script>
      <title>NodeJS project</title>
   </head>
   <body onload="showData('/get-data')">
      <section class="header">
         <div class="container">
            <div class="head">
               <div class="logo">
                  <img src="./views/images/logo.jpg">
                  <span>DISPLAY</span>
               </div>
               <div class="icons">
                  <ul>
                  <li><a href="https://instagram.com" class="instagram"></a></li>
                  <li><a href="https://plus.google.com/" class="google"></a></li>
                  <li><a href="https://ru.pinterest.com/" class="pinterest"></a></li>
                   <li><a href="" class="icon3"></a></li>
                     <li><a href="https://facebook.com" class="facebook"></a></li>
                     <li><a href="https://twitter.com" class="twitter" ></a></li>
                      
                  </ul>
               </div>
            </div>
            <div class="menu">
               <nav>
                  <ul>
                     <li><a href="/home" class="active_path">Home</a></li>
                     <li><a href="/contact" >Contact</a></li>
                  </ul>
               </nav>
            </div>
         </div>
      </section>
      <section class="login">
         <div class="container">
            <div class="wrapper_login">
               <div class="login_text">
                  <span>CHECK OUT OUR WORK</span>
               </div>
               <%if (!user) { %>
               <div class="login_block">
                   <input type="text" name="" placeholder="Username" id="loginInput">
                  <input type="password" name="" placeholder="Password" id="passInput">
                  <button onclick="login()">LOG IN</button>
                 <% } %>
               <%if (user) { %>
               <div class="login_block">
                  <span class="login_span">User: <%= user%></span>
                  <button onclick="logOut()">LOG OUT</button>
                 <% } %>
               </div>
            </div>
         </div>
      </section>
      <section class="portfolio">
         <div class="container">
            <div class="paths">
               <span class="all" onclick="showAll()">ALL  </span>/<span class="print" onclick="print()" >  PRINT  </span>/<span class="photo" onclick="photo()">  PHOTOGRAPHY  </span>/<span class="web" onclick="web()">  WEB  </span>/<span class="applications" onclick="app()">  APPLICATIONS  </span>
            </div>
            <div id="table_show"></div>
         </div>
      </section>
      <section class="contact">
         <div class="container">
            <div class="wrapper_contact">
               <div class="contact_text">
                  <span>Are You impressed by our creativity?</span>
               </div>
               <div class="contact_button">
                  <button onclick="contact()">CONTACT US RIGHT NOW</button>
               </div>
            </div>
         </div>
      </section>
      <section class="footer">
         <div class="container">
            <div class="wrapper_footer">
               <div class="footer_text">
                  <span>COPYRIGHT 2013 DISPLAY. ALL RIGHTS RESERVED.</span>
               </div>
               <div class="footer_paths">
                  <span class="footer_home" onclick="window.location.href = '/home';">home  </span>/<span class="footer_contact" onclick="contact()">  contact</span>
               </div>
            </div>
         </div>
      </section>
   </body>
</html>